<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvmois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp" />

    <Spinner
        android:id="@+id/mois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="28dp"
        android:drawSelectorOnTop="true"
        app:layout_constraintTop_toBottomOf="@+id/tvmois"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvannee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/mois"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/annee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawSelectorOnTop="true"
        app:layout_constraintTop_toBottomOf="@+id/tvannee"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/saisir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:onClick="afficherv"
        android:text="AFFICHER LA LISTE DES RAPPORTS"
        app:layout_constraintTop_toBottomOf="@+id/annee"
        tools:layout_editor_absoluteX="56dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
